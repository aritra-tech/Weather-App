<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

        </ProgressBar>

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:elevation="20dp">

                <RelativeLayout
                    android:id="@+id/rl_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_200">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="12dp">

                        <EditText
                            android:id="@+id/get_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/enter_city_name"
                            android:fontFamily="@font/dm_sans_medium"
                            android:drawableStart="@drawable/search"
                            android:drawablePadding="7dp"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/black"
                            android:drawableTint="@color/black"
                            android:background="@color/white">

                        </EditText>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/sub_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/weather_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/snow_bg">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date_and_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dm_sans_medium"
                            android:text="10 January, 01:26 am"
                            android:textColor="@color/white"
                            android:textSize="15dp">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day_max_temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/dm_sans_medium"
                                android:text="Day 22"
                                android:textColor="@color/white"
                                android:textSize="15dp">

                            </TextView>

                            <TextView
                                android:id="@+id/day_min_temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/dm_sans_medium"
                                android:text="Day 22"
                                android:textColor="@color/white"
                                android:textSize="15dp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/temp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/dm_sans_medium"
                                android:text="18*"
                                android:textColor="@color/white"
                                android:textSize="95sp">

                            </TextView>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/weather_icon"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                app:lottie_rawRes="@raw/clear">

                            </com.airbnb.lottie.LottieAnimationView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/feels_like"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/dm_sans_medium"
                                android:text="Feels like   16*"
                                android:textColor="@color/white"
                                android:textSize="15dp">

                            </TextView>

                            <TextView
                                android:id="@+id/weather_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/dm_sans_medium"
                                android:text="Sunny"
                                android:textColor="@color/white"
                                android:textSize="15dp">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginRight="15dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardMaxElevation="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/main_bg_above"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/snow_bg"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/pressure_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/pressure_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/pressure_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:text="100">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:gravity="center"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:textColor="@color/white"
                                        android:text="Pressure">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/humidity_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/humidity_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/humidity_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:text="100">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:gravity="center"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:textColor="@color/white"
                                        android:text="Humidity">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/wind_speed_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/wind_speed_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/wind_speed_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:text="100">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:gravity="center"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:textColor="@color/white"
                                        android:text="Wind Speed">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/main_bg_below"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/snow_bg"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/sunrise_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/sunrise_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/sunrise_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:text="100">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:gravity="center"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:textColor="@color/white"
                                        android:text="Pressure">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/sunset_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/sunset_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/sunset_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:text="100">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:gravity="center"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:textColor="@color/white"
                                        android:text="Humidity">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/temp_farenhite_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/temp_farenhite_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/temp_farenhite_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="17sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:text="100">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:gravity="center"
                                        android:fontFamily="@font/dm_sans_medium"
                                        android:textColor="@color/white"
                                        android:text="Wind Speed">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>